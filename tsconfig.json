{
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es5",
      "lib": [
        "es2017",
        "dom"
      ],
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "strictNullChecks": true,
      "declaration": false,
      "forceConsistentCasingInFileNames": true,
      "experimentalDecorators": true,
      "noEmitHelpers": false
    },
    "exclude": [
      ".vscode",
      "dist",
      "docs",
      "node_modules",
      "test"
    ]
  }